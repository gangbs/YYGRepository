
@{
    ViewBag.Title = "Index";
}

@using StackExchange.Profiling
@MiniProfiler.RenderIncludes()

<h2>Index</h2>


<button onclick="addName()">添加name</button>

<button onclick="addAge()">添加age</button>

<button onclick="apply()">异步请求</button>

<button onclick="display()">展示cookie</button>

<button onclick="del()">服务端删除cookie</button>

@section Scripts {
    
    <script type="text/javascript">

        function display() {
            alert(document.cookie);
        }

        function addName() {
            var exp = new Date();
            exp.setTime(exp.getTime() + 1 * 24 * 60 * 60 * 1000);
            var cookie = "name=yyg;expires=" + exp.toUTCString();
            document.cookie = cookie;
        }

        function addAge() {
            var exp = new Date();
            exp.setTime(exp.getTime() + 1 * 24 * 60 * 60 * 1000);
            var cookie = "age=33;expires=" + exp.toUTCString();
            document.cookie = cookie;
        }

        function apply() {
            var url = "@Url.Action("CheckCookie")";
            $.get(url, function (r) {
                alert(r);
                alert(document.cookie);
            });
        }


    </script> 

}



